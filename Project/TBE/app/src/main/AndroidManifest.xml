<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sky_lt.tbe">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".InGameActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".StageSelectActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".MenuActivity" android:theme="@android:style/Theme.DeviceDefault.Light.Dialog"
            android:screenOrientation="portrait"/>
    </application>

</manifest>